<ul class="weekdays-list">
	{{#each day in days}}
		<li {{bind-attr class="day.status"}}>
			{{#link-to "day" day}}
				<div class="day">{{format-date day.date format="dddd"}}</div>
				<div class="date">{{format-date day.date format="MMM D"}}</div>
				<div class="routine">{{day.totalRoutines}} Routines</div>
				<div class="workouts">{{day.totalWorkouts}} Workouts</div>
				<div {{bind-attr class=":status-container day.status"}}>
					<span>{{get-status-icon day.status}}</span>
				</div>
			{{/link-to}}
		</li>
	{{/each}}
</ul>