  <input type="text" placeholder="ex: Upper Body, Arms...">
  
  <label for="">What days will you do this routine?</label>
  <div class="day-selector">
    <button class="button button-blue">S</button>
    <button class="button button-blue selected">M</button>
    <button class="button button-blue">T</button>
    <button class="button button-blue">W</button>
    <button class="button button-blue">Th</button>
    <button class="button button-blue">F</button>
    <button class="button button-blue">S</button>
  </div>

  <label for="">Add some workouts</label>
  <input type="text" placeholder="Start typing...">
  <div class="suggestions">
    <a class="suggestion">
      Item 1
    </a>
    <a class="suggestion">
      Item 2
    </a>
    <a class="suggestion">
      Item 2
    </a>
  </div>

  <section class="form-actions">
