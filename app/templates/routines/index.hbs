<div class="flex-row actions">
  <a {{action "edit"}} class="fadein">
    {{#if isEditing}}
      <i class="fa fa-times-circle-o"></i> Cancel
    {{else}}
      <i class="fa fa-check-circle-o"></i> Edit
    {{/if}}
  </a>
  {{#link-to "routines.create"}}<i class="fa fa-plus"></i> Create{{/link-to}}
</div>
<ul class="link-list border-top">
  {{#each routine in model itemController="routine.index"}}
    <li>
      <span>
        {{#if parentController.isEditing}}
          {{#link-to "routine.edit" routine}}{{routine.name}}{{/link-to}}
          <i class="fa fa-lg fa-times-circle fadein red" {{action "delete" routine}}></i>
        {{else}}
          {{#link-to "routine.index" routine}}{{routine.name}}{{/link-to}}
        {{/if}}
      </span>
    </li>
  {{/each}}
</ul>