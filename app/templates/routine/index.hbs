<div class="flex-row actions">
  <a href="#" {{action "delete" model}} class="red"><i class="fa fa-times"></i> Delete routine</a>
  {{#link-to "routine.edit" model}}<i class="fa fa-check-circle-o"></i> Edit{{/link-to}}
</div>

{{!-- LIST THE DAYS --}}

<h2 class="padded no-padding-bottom">Workouts</h2>
<ul class="link-list">
  {{#each workout in model.workouts}}
    <li>
      <span>{{workout.name}}</span>
    </li>
  {{/each}}
</ul>